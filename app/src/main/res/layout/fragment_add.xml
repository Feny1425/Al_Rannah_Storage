<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.fragments.AddFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?colorPrimary">


        <Button
            android:id="@+id/buy_btn"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="290dp"
            android:backgroundTint="@color/light_foreground"
            android:text="اضافة مشتريات"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="UsingOnClickInXml,TextContrastCheck" />

        <Button
            android:id="@+id/import_btn"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_below="@+id/buy_btn"
            android:layout_centerInParent="true"
            android:layout_marginTop="23dp"
            android:backgroundTint="@color/light_foreground"
            android:text="استيراد"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="UsingOnClickInXml,TextContrastCheck" />

    </RelativeLayout>

</FrameLayout>